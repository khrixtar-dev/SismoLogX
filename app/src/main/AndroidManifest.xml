<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permiso  para conectarte a Internet -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Permiso opcional si luego quieres comprobar conexiÃ³n antes de llamar la API -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- (para el futuro) Permiso necesario para notificaciones push a partir de Android 13 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Permisos para mapbox-->
    <!-- Include this permission to grab user's general location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Include only if your app benefits from precise location access. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Permisos para contactos -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SismoLogX">
        <meta-data
            android:name="com.mapbox.maps.token"
            android:value="@string/mapbox_access_token" />


        <activity
            android:name=".ui.SismoDetalleActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AfterGuideActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DuringGuideActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.BeforeGuideActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SismosActivity"
            android:exported="false" />
        <activity
            android:name=".ui.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>