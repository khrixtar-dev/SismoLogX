        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <ScrollView
        android:layout_width="376dp"
        android:layout_height="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txSubTitle"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Que hacer en caso de una emergencia sismologica?"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txParrafo"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:text="En el breve lapso en que ocurre un sismo, es posible realizar acciones que permiten mitigar el daÃ±o que puede sufrir usted y su familia."
